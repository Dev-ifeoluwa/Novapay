generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// transactions    Json?         @default("[]")

model TotalUser { 
  id              Int           @id @default(autoincrement())
  email           String        @unique
  password        String
  firstName       String
  lastName        String
  balance         Float         @default(0)
  transactions    Transaction[]         
  accountNumber   String?        
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
}


model Transaction {
  id            Int         @id @default(autoincrement())
  amount        Float
  type          String
  itemsPurchase String?
  DayPurchased  String?
  itemsTime     String?
  description   String?
  createdAt     DateTime      @default(now())
  user          TotalUser     @relation(fields: [userId], references: [id])
  userId        Int
}